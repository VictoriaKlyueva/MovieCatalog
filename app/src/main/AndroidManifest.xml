<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".presentation.view.MovieCatalogApplication"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalog"
        tools:targetApi="tiramisu">

        <activity
            android:name=".presentation.view.MovieDetailsScreen.MovieDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_movies_details"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.FriendsScreen.FriendsActivity"
            android:exported="false"
            android:label="@string/title_activity_friends"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.FeedActivity"
            android:exported="false"
            android:label="@string/title_activity_feed"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.SignUpScreen.SignUpActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.SignInScreen.SignInActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.WelcomeScreen.WelcomeActivity"
            android:exported="false"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieCatalog" />
        <activity
            android:name=".presentation.view.SplashScreen.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
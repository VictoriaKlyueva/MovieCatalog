<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.Fragments.MyFavoriteMoviesFragment">

    <com.example.moviecatalog.presentation.view.Views.GradientTextView
        android:id="@+id/myFavoritesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_favorites"
        android:fontFamily="@font/manrope_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/allTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/all"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFavorites"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_below="@id/myFavoritesTextView"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:scrollbars="none"/>
</RelativeLayout>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieCatalog" parent="Base.Theme.MovieCatalog" >
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomFontStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="background">@drawable/bottom_nav_background</item>
        <item name="itemTextColor">@color/gray_faded</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>